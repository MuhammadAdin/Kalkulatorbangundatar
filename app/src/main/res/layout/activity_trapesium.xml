<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#3a82f0"
    tools:context=".Trapesium">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalkulator Trapesium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/inputSisiAtas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Sisi Atas"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputSisiBawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Sisi Bawah"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/inputTinggiTrapesium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Tinggi Trapesium"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonHitungTrapesium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:background="#dabc15"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textLuasTrapesium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas: "
            android:layout_marginTop="16dp"
            android:textSize="18sp"/>


    </LinearLayout>
</LinearLayout>
