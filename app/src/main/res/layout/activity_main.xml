<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#3a82f0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/radius">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KALKULATOR BANGUN DATAR"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsegitiga"
                android:text="SEGITIGA"
                android:textColor="#FFFFFF"
                android:background="#dabc15"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/btnpersegi"
                android:text="PERSEGI"
                android:textColor="#FFFFFF"
                android:background="#dabc15"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btntrapesium"
                android:text="TRAPESIUM"
                android:textColor="#FFFFFF"
                android:background="#dabc15"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/btnlingkaran"
                android:text="LINGKARAN"
                android:textColor="#FFFFFF"
                android:background="#dabc15"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
